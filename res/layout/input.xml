<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="250dip"
    android:layout_alignParentBottom="true"
    android:background="@color/background"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ToggleButton
            android:id="@+id/altKey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:layout_weight="1.0"
            android:textOff="@string/altKey"
            android:textOn="@string/altKey"
            android:textColor="@color/text_selector" />

        <ToggleButton
            android:id="@+id/shiftKey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:layout_weight="1.0"
            android:textOff="@string/shiftKey"
            android:textOn="@string/shiftKey"
            android:textColor="@color/text_selector" />

        <Button
            android:id="@+id/typeSwitch"
            style="@style/default_button"
            android:layout_marginTop="5dip"
            android:text="@string/alphaOn"
            android:textColor="@color/text_selector"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centerTile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <android.gesture.GestureOverlayView
            android:id="@+id/gestures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gestureStrokeType="multiple">
        
        <TextView
            android:id="@+id/recentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textAppearance="?android:attr/textAppearanceMedium" />    
		</android.gesture.GestureOverlayView>
        
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard"
    		android:layout_width="match_parent"
    		android:layout_height="fill_parent"
    		android:layout_gravity="center_horizontal"
    		android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical" >

        <ToggleButton
            android:id="@+id/symbolSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" 
            android:layout_marginTop="5dip"
            android:textOn="@string/special"
            android:textOff="@string/special"
            android:textColor="@color/text_selector"/>

        <ImageButton
            android:id="@+id/deleteKey"
            style="@style/default_button"
            android:src="@drawable/delete_selector" />

        <ImageButton
            android:id="@+id/spaceKey"
            style="@style/default_button"
            android:src="@drawable/space_selector"/>

        <ImageButton
            android:id="@+id/enterKey"
            style="@style/default_button"
            android:src="@drawable/enter_selector"/>

    </LinearLayout>

</LinearLayout>
